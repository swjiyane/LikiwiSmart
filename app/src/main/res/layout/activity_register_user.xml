<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3ddd8"
    android:orientation="vertical"
    tools:context="com.example.codetribe.likiwismart.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_camera"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="right"
                android:src="@drawable/cupcakeicon" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Upload profile picture"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Full Name"
            android:textColor="#000" />

        <EditText
            android:id="@+id/userFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:elevation="4dp"
            android:textStyle="normal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textColor="#000"

            />

        <EditText
            android:id="@+id/UserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="LikwiSmart@email.com"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Password"
            android:textAlignment="textStart"
            android:textColor="#000" />

        <EditText
            android:id="@+id/UserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next of kin details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textStyle="normal" />

        <EditText
            android:id="@+id/nextofkin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Next of kin 1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/cell1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:hint="Enter cellphone"
            android:inputType="phone" />


        <EditText
            android:id="@+id/nextofkin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Next of kin 2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/cell2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:hint="Enter cellphone"
            android:inputType="phone"
            android:layout_marginBottom="10dp"/>



        <Button
            android:id="@+id/UserCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="#DAA520"
            android:onClick="createaccount"
            android:text="create an account"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="normal" />

    </LinearLayout>

</ScrollView>